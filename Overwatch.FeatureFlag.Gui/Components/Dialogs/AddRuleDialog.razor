<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Create Rule</MudText>
        
        <!-- Tenant Input -->
        <MudTextField T="string" @bind-Value="Tenant" Label="Tenant" MaxLength="255" />

        <!-- Feature Select List -->
        <MudSelect T="Guid?" Label="Feature" @bind-Value="FeatureId" Required="true">
            <MudSelectItem T="Guid?" Value="null">Select a Feature</MudSelectItem>
            @foreach (var feature in Features)
            {
                <MudSelectItem T="Guid?" Value="@feature.Id">@feature.Name</MudSelectItem>
            }
        </MudSelect>

        <!-- Environment Select List -->
        <MudSelect T="Guid?" Label="Environment" @bind-Value="EnvironmentId" Required="false">
            <MudSelectItem T="Guid?" Value="null">All Environments</MudSelectItem>
            @foreach (var environment in Environments)
            {
                <MudSelectItem T="Guid?" Value="@environment.Id">@environment.Name</MudSelectItem>
            }
        </MudSelect>

        <!-- Is Enabled Checkbox -->
        <MudCheckBox @bind-Value="IsEnabled" Label="Is Enabled" Color="Color.Secondary" UncheckedColor="Color.Default" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Create Rule</MudButton>
    </DialogActions>
</MudDialog>